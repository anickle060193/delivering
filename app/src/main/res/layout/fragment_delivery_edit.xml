<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.adamnickle.delivering.DeliveryEditFragment"
    style="@style/MainContentPadding">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/delivery_edit_fragment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textCapWords"
            style="@style/InputEditText"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="bottom">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/delivery_edit_fragment_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Delivery Tip"
                android:inputType="numberDecimal"
                style="@style/InputEditText"/>

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/delivery_edit_fragment_tip_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/delivery_edit_fragment_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Delivery Total"
                android:inputType="numberDecimal"
                style="@style/InputEditText"/>

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/delivery_edit_fragment_total_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/delivery_edit_fragment_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Time"
            android:inputType="datetime"
            style="@style/InputEditText"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/delivery_edit_fragment_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Time"
            android:inputType="datetime"
            style="@style/InputEditText"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/delivery_edit_fragment_start_mileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Mileage"
            android:inputType="numberDecimal"
            style="@style/InputEditText"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/delivery_edit_fragment_end_mileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Mileage"
            android:inputType="numberDecimal"
            style="@style/InputEditText"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
